<?xml version="1.0" encoding="utf-8"?>
<com.zwyl.myfile.views.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/smLayout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clickable="true"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <FrameLayout
        android:id="@+id/fl_file_item"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/file_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="107dp" />

            <TextView
                android:id="@+id/file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin_40dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/file_icon"
                android:ellipsize="end"
                android:maxEms="32"
                android:singleLine="true"
                android:text="文件"
                android:textColor="@color/gray_3333"
                android:textSize="@dimen/textsize_18sp" />

            <TextView
                android:id="@+id/file_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="380dp"
                android:text="0项"
                android:textColor="@color/gray_3333"
                android:textSize="@dimen/textsize_18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/file_lastmodifiedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="133dp"
                android:text="时间"
                android:textColor="@color/gray_3333"
                android:textSize="@dimen/textsize_18sp" />
        </RelativeLayout>
    </FrameLayout>

    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#FF4081"
        android:text="删除"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnRename"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/gray_CBCBCB"
        android:text="重命名"
        android:textColor="@android:color/black" />


</com.zwyl.myfile.views.SwipeMenuLayout><!--<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content">-->

