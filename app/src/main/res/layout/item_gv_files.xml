<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="40dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/file_icon"
        android:layout_width="@dimen/common_margin_50dp"
        android:layout_height="@dimen/common_margin_50dp" />

    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_10dp"
        android:layout_toRightOf="@+id/file_icon"
        android:ellipsize="end"
        android:maxEms="32"
        android:singleLine="true"
        android:text="文件"
        android:textColor="@color/gray_3333"
        android:textSize="@dimen/textsize_16sp" />

    <TextView
        android:id="@+id/file_lastmodifiedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textColor="@color/gray_CBCBCB"
        android:textSize="@dimen/textsize_12sp" />
</LinearLayout>