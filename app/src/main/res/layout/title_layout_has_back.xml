<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/c_green"
    android:orientation="vertical">

    <TextView
        android:id="@+id/head_back"
        style="@style/style_head_text"
        android:layout_marginLeft="@dimen/common_margin_20dp"
        android:drawableLeft="@mipmap/back"
        android:text="返回" />


    <TextView
        android:id="@+id/tv_title_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_18sp" />

    <LinearLayout
        android:id="@+id/ll_head_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center"
        android:layout_marginRight="@dimen/common_margin_20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/head_mode"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@mipmap/gridemode"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/head_search"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="33dp"
            android:background="@mipmap/search" />

        <ImageView
            android:id="@+id/head_addfile"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="33dp"
            android:background="@mipmap/addfile" />

        <ImageView
            android:id="@+id/head_options"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="33dp"
            android:background="@mipmap/options" />
    </LinearLayout>
</FrameLayout>